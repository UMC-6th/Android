<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Data binding variables can be declared here if needed -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/lookLoadingPb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/look_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="둘러보기"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="55dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/look_content_tb"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/look_title_tv"
            app:tabBackground="@drawable/tab_style"
            app:tabGravity="start"
            app:tabSelectedTextColor="#ffffff"
            app:tabTextColor="#999999"
            app:tabIndicatorHeight="0dp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/look_content_tb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/locker_chart_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="차트"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/locker_chart_iv"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/baseline_chevron_right_24"
                    app:layout_constraintTop_toTopOf="@id/locker_chart_tv"
                    app:layout_constraintBottom_toBottomOf="@id/locker_chart_tv"
                    app:layout_constraintStart_toEndOf="@id/locker_chart_tv" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/look_chart_total_cl"
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/gray_round_rectangle"
                    app:layout_constraintTop_toBottomOf="@id/locker_chart_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/chart_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FLO 차트"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19시 기준"
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintBottom_toBottomOf="@id/chart_title_tv"
                        app:layout_constraintStart_toEndOf="@id/chart_title_tv"
                        app:layout_constraintTop_toTopOf="@id/chart_title_tv" />

                    <ImageView
                        android:id="@+id/listen_IV2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_play_arrow_24"
                        app:layout_constraintBottom_toBottomOf="@id/chart_title_tv"
                        app:layout_constraintEnd_toStartOf="@id/all_listen_tv2"
                        app:layout_constraintTop_toTopOf="@id/chart_title_tv" />

                    <TextView
                        android:id="@+id/all_listen_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체듣기"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@id/listen_IV2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/listen_IV2" />

                    <TextView
                        android:id="@+id/look_chart_sub_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최근 24시간 집계, FLO 최고 인기곡 차트"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/chart_title_tv" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/look_flo_chart_rv"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginVertical="15dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/look_chart_sub_title_tv"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:listitem="@layout/item_song"
                        tools:itemCount="8" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/look_sub_title_video_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영상"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/look_chart_total_cl" />

                <ImageView
                    android:id="@+id/look_sub_title_video_arrow_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/btn_arrow_more"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/look_sub_title_video_tv"
                    app:layout_constraintTop_toTopOf="@id/look_sub_title_video_tv"
                    app:layout_constraintBottom_toBottomOf="@id/look_sub_title_video_tv" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/look_video_cl"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/gray_round_rectangle"
                    app:layout_constraintTop_toBottomOf="@id/look_sub_title_video_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/look_video_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="믿고 보는 영상 PICK"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/look_video_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_video_exp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/look_video_title_tv" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/look_sub_title_jenre_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최신 장르 EXPLORE"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/look_video_cl" />

                <ImageView
                    android:id="@+id/look_sub_title_jenre_arrow_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/btn_arrow_more"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/look_sub_title_jenre_tv"
                    app:layout_constraintTop_toTopOf="@id/look_sub_title_jenre_tv"
                    app:layout_constraintBottom_toBottomOf="@id/look_sub_title_jenre_tv" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/look_jenre_cl"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/gray_round_rectangle"
                    app:layout_constraintTop_toBottomOf="@id/look_sub_title_jenre_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/look_jenre_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="믿고 듣는 장르 EXPLORE"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/look_jenre_item_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/look_jenre_title_tv"
                        app:layout_constraintBottom_toTopOf="@+id/look_jenre_item_2">

                        <ImageView
                            android:id="@+id/look_jenre_iv_1"
                            android:layout_width="100dp"
                            android:layout_height="0dp"
                            android:src="@drawable/img_jenre_exp_1"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintDimensionRatio="H,1:1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최신 힙합"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="15dp"
                            app:layout_constraintStart_toEndOf="@id/look_jenre_iv_1"
                            app:layout_constraintTop_toTopOf="@id/look_jenre_iv_1"
                            app:layout_constraintBottom_toBottomOf="@id/look_jenre_iv_1" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/look_jenre_item_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/look_jenre_item_1"
                        app:layout_constraintBottom_toTopOf="@+id/look_jenre_item_3">

                        <ImageView
                            android:id="@+id/look_jenre_iv_2"
                            android:layout_width="100dp"
                            android:layout_height="0dp"
                            android:src="@drawable/img_jenre_exp_2"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintDimensionRatio="H,1:1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최신 팝"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="15dp"
                            app:layout_constraintStart_toEndOf="@id/look_jenre_iv_2"
                            app:layout_constraintTop_toTopOf="@id/look_jenre_iv_2"
                            app:layout_constraintBottom_toBottomOf="@id/look_jenre_iv_2" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/look_jenre_item_3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/look_jenre_item_2"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/look_jenre_iv_3"
                            android:layout_width="100dp"
                            android:layout_height="0dp"
                            android:src="@drawable/img_jenre_exp_3"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintDimensionRatio="H,1:1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최신 발라드"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="15dp"
                            app:layout_constraintStart_toEndOf="@id/look_jenre_iv_3"
                            app:layout_constraintTop_toTopOf="@id/look_jenre_iv_3"
                            app:layout_constraintBottom_toBottomOf="@id/look_jenre_iv_3" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
